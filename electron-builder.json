{
  "productName": "SmartBlueprint Pro",
  "appId": "com.smartblueprint.desktop",
  "directories": {
    "output": "dist-desktop"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "electron-preload.js",
    "desktop-agent-embedded.js",
    "server/**/*",
    "!server/**/*.ts",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "SmartBlueprint-Pro-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "assets/icon.ico",
    "uninstallerIcon": "assets/icon.ico",
    "installerHeaderIcon": "assets/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "SmartBlueprint Pro",
    "include": "installer.nsh"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "SmartBlueprint-Pro-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Network",
    "artifactName": "SmartBlueprint-Pro-${version}-${arch}.${ext}"
  },
  "publish": {
    "provider": "github",
    "owner": "smartblueprint",
    "repo": "desktop"
  }
}